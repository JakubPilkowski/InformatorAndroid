<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="400dp"
        android:maxHeight="500dp"
        android:scaleType="fitXY"
        app:imageUrl="@{viewModel.imgUrl}"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:weightSum="2"
            android:background="@color/colorBlackOffers"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:scaleType="fitXY"
                app:imageUrl="@{viewModel.logoUrl}" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@{viewModel.brand}"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/montserrat"
                    android:text="@{viewModel.title}"
                    android:textColor="@color/colorGrayOffers"
                    android:textSize="18sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp">

                <Button
                    android:id="@+id/post_office_extend_info"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/oval_gradient_background"
                    android:onClick="@{() -> viewModel.onClick()}" />

                <Button
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_dol"
                    android:onClick="@{() -> viewModel.onClick()}"
                    app:setOnShowLabelDrawable="@{viewModel.show}" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        </LinearLayout>
    </LinearLayout>
    <data>
        <variable
            name="viewModel"
            type="com.example.informator.adapters.offers.OffersAdapterViewModel" />
    </data>
</layout>
