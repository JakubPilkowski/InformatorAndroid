<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="pl.android.informator.ui.timetable.line_timetables.line_details.SingleDepartureTimeHourViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/single_departure_time_hour"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:background="@color/colorBlackOffers"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@{viewModel.hour}"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/single_departure_time_minutes_container"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>
</layout>
