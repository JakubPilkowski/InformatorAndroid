<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20"
        tools:context=".ui.weather.WeatherFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:setDrawable="@{viewModel.weatherType}"
            android:layout_weight="13"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/transparent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:text="@string/weather"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat"
                        android:text="@{viewModel.temp}"
                        android:textSize="64sp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:layout_width="168dp"
                        android:layout_height="48dp"
                        android:text="@string/today"
                        android:background="@drawable/horizontal_main_gradient"
                        android:gravity="center"
                        android:textSize="24sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorWhite"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat"
                        android:text="@{viewModel.weatherType}"
                        android:textSize="24sp"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginBottom="16dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_wilgotnosc2"
                        />
                    <TextView
                        android:layout_width="64dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorWhite"
                        android:text="@{viewModel.humidity}"
                        />
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="12dp"
                        android:src="@drawable/ic_cisnienie2"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="@font/montserrat"
                        android:textColor="@color/colorWhite"
                        android:text="@{viewModel.pressure}"
                        />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="@string/tomorrow"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorBlack"
                    />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center_horizontal"
                    app:setDrawable="@{viewModel.weatherTypeTomorrow}"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.tempTomorrow}"
                    android:textAlignment="center"
                    android:layout_margin="12dp"
                    android:textColor="@color/colorBlackLight"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.maxTempTomorrow}"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlackLight"
                    android:fontFamily="@font/montserrat"
                    android:textSize="24sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorGrayLight"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:text="@string/overmorrow"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorBlack"
                    />
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center_horizontal"
                    app:setDrawable="@{viewModel.weatherTypeOvermorrow}"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.tempOvermorrow}"
                    android:textAlignment="center"
                    android:layout_margin="12dp"
                    android:textColor="@color/colorBlackLight"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.maxTempOvermorrow}"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlackLight"
                    android:fontFamily="@font/montserrat"
                    android:textSize="24sp"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <data>

        <variable
            name="viewModel"
            type="com.example.informator.ui.weather.WeatherViewModel" />
    </data>
</layout>
